<AnchorPane prefHeight="400.0" prefWidth="400.0" style="-fx-background-color: #00807C;" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ro.mta.licenta.badea.miniPagesControllers.AddRolesToWorkersController">
   <children>
      <GridPane layoutX="85.0" layoutY="26.0" AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0">
        <columnConstraints>
          <ColumnConstraints halignment="CENTER" hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
          <ColumnConstraints halignment="CENTER" hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
        </columnConstraints>
        <rowConstraints>
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
        </rowConstraints>
         <children>
            <Label text="Worker's Name:">
               <font>
                  <Font name="System Bold" size="14.0" />
               </font>
            </Label>
            <Label text="Role:" GridPane.rowIndex="1">
               <font>
                  <Font name="System Bold" size="14.0" />
               </font>
            </Label>
            <Label fx:id="levelField" text="Level of Permissions:*" GridPane.rowIndex="2">
               <font>
                  <Font name="System Bold" size="14.0" />
               </font>
               <tooltip>
                  <Tooltip fx:id="toolTipPermission" />
               </tooltip>
            </Label>
            <Label fx:id="nameLabelField" text="SetName" GridPane.columnIndex="1">
               <font>
                  <Font name="System Bold" size="14.0" />
               </font>
            </Label>
            <TextField fx:id="roleField" promptText="Role" GridPane.columnIndex="1" GridPane.rowIndex="1" />
            <ComboBox fx:id="permissionComboBox" prefWidth="150.0" promptText="Permission" GridPane.columnIndex="1" GridPane.rowIndex="2" />
         </children>
      </GridPane>
      <Label layoutX="42.0" layoutY="133.0" text="*Place the mouse over the text to get more details">
         <font>
            <Font name="System Bold" size="14.0" />
         </font>
      </Label>
      <ImageView fx:id="imageViewRoles" fitHeight="163.0" fitWidth="228.0" layoutX="86.0" layoutY="153.0" pickOnBounds="true" preserveRatio="true" AnchorPane.leftAnchor="86.0" AnchorPane.rightAnchor="86.0">
         <image>
            <Image url="@../Images/rolesicon.png" />
         </image>
      </ImageView>
      <Button fx:id="setButton" layoutX="128.0" layoutY="314.0" mnemonicParsing="false" onAction="#setRoleAction" text="Set Role and Permission" AnchorPane.leftAnchor="128.0" AnchorPane.rightAnchor="128.0" />
