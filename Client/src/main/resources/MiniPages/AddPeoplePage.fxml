<AnchorPane prefHeight="500.0" prefWidth="400.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ro.mta.licenta.badea.employee.AddPeopleToProjectController">
   <children>
      <Label alignment="CENTER" layoutX="1.0" layoutY="14.0" prefHeight="27.0" prefWidth="400.0" text="Select coworkers">
         <font>
            <Font name="System Bold" size="18.0" />
         </font>
      </Label>
      <Line endX="200.0" layoutX="201.0" layoutY="41.0" startX="-199.0" />
      <Label layoutX="35.0" layoutY="64.0" text="Search filter:">
         <font>
            <Font name="System Bold" size="14.0" />
         </font>
      </Label>
      <TextField fx:id="searchField" layoutX="127.0" layoutY="62.0" />
      <TableView fx:id="tableCoworkers" layoutX="35.0" layoutY="114.0" prefHeight="200.0" prefWidth="323.0" AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0">
